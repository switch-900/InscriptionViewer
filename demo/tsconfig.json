{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@/components/*": ["../src/components/*"],
      "@/services/*": ["../src/services/*"],
      "@/types/*": ["../src/types/*"],
      "@/utils/*": ["../src/utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
